{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "projects": {
    "dashboard-client": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",

      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "browser": "src/main.ts",
            "index": "src/index.html",
            "tsConfig": "tsconfig.app.json",
            "outputPath": "dist/dashboard-client",

            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],

            "styles": [
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "src/styles.css"
            ],

            "scripts": []
          },

          "configurations": {
            "production": {
              "outputHashing": "all",
              "sourceMap": false,
              "optimization": true
            },
            "development": {
              "sourceMap": true,
              "optimization": false
            }
          },

          "defaultConfiguration": "development"
        },

        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "port": 4200
          },

          "configurations": {
            "development": {
              "buildTarget": "dashboard-client:build:development"
            },
            "production": {
              "buildTarget": "dashboard-client:build:production"
            }
          },

          "defaultConfiguration": "development"
        }
      }
    }
  }
}
