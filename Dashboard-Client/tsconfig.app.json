{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [],
    "baseUrl": "src",
    "paths": {
      "@app/*": [ "app/*" ],
      "@auth/*": [ "app/auth/*" ],
      "@auth-core/*": [ "app/auth/core/*" ],
      "@layout/*": [ "app/layout/*" ],
      "@dashboard/*": [ "app/dashboard/*" ],
      "@products/*": [ "app/products/*" ],
      "@reports/*": [ "app/reports/*" ],
      "@users/*": [ "app/users/*" ]
    }
  },
  "files": [
    "src/polyfills.ts",
    "src/main.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
